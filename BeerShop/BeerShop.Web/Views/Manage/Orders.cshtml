@model IEnumerable<OrderListingServiceModel>
@{
    ViewData["Title"] = "Orders";
    ViewData.AddActivePage(ManageNavPages.Orders);
}

<section>
    <h2>Orders</h2>

    <div class="container">

        @foreach (var order in Model)
        {<div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-warning">
                        <div class="card-title">
                            <div class="row">
                                <div class="col-md-4">
                                    <h5>Order#@order.Id</h5>
                                </div>
                                <div class="col-md-4">
                                    <h5>Date: @order.Date.ToShortDateString()</h5>
                                </div>
                                <div class="col-md-4 ">
                                    <h5>Order Status: @order.Status.ToString()</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-header bg-info">
                        <div class="card-title">
                            <div class="row">
                                <div class="col-md-4">
                                    <h4>Address</h4>
                                </div>
                                <div class="col-md-5">
                                    <h4>Products</h4>
                                </div>
                                <div class="col-md-3">
                                    <h4>Pieces</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 ml-3">
                            <h5>City: @order.Address.Town</h5>
                            <h5>Street: @order.Address.Street</h5>
                            <h5>Zip Code: @order.Address.ZipCode</h5>
                            <h5>Telephone Number: @order.Address.PhoneNumber</h5>
                        </div>
                        <div class="col-md-6">
                            <div class="card-title text-center">
                                @foreach (var beer in order.Beers)
                                {
                                    <div class="row">
                                        <div class="col-md-7 align-self-center">
                                            <h5 class="product-name">@beer.Key</h5>
                                        </div>
                                        <div class="col-md-5 align-self-center text-right">
                                            <div class="col-md-5 cart-fields">
                                                <input type="text" class="form-control input-sm" value="@beer.Value" readonly>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @foreach (var accessory in order.Accessories)
                                {
                                    <div class="row">
                                        <div class="col-md-7 align-self-center">
                                            <h5 class="product-name">@accessory.Key</h5>
                                        </div>
                                        <div class="col-md-5 align-self-center text-right">
                                            <div class="col-md-5  cart-fields">
                                                <input type="text" class="form-control input-sm" value="@accessory.Value" readonly>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @foreach (var giftsets in order.GiftSets)
                                {
                                    <div class="row">
                                        <div class="col-md-7 align-self-center">
                                            <h5 class="product-name">@giftsets.Key</h5>
                                        </div>
                                        <div class="col-md-5 align-self-center text-right">
                                            <div class="col-md-5 cart-fields">
                                                <input type="text" class="form-control input-sm" value="@giftsets.Value" readonly>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @foreach (var glass in order.Glasses)
                                {
                                    <div class="row text-center">
                                        <div class="col-md-7 align-self-center">
                                            <h5 class="product-name">@glass.Key</h5>
                                        </div>
                                        <div class="col-md-5 align-self-center text-right">
                                            <div class="col-md-5 cart-fields">
                                                <input type="text" class="form-control input-sm" value="@glass.Value" readonly>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer bg-faded">
                        <div class="row ">
                            <div class="col-md-12">
                                <div class="col-md-10">
                                    <h4 class="text-right">Total Price: <strong>@order.Price</strong></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        }
    </div>

</section>