@model IEnumerable<TownListingModel>
@{
    ViewData["Title"] = "All towns";
}
<h2>@ViewData["Title"]</h2>
<div>
    <a asp-controller="Towns" asp-action="Create" class="btn btn-lg btn-info">Add Town</a>
</div>
<hr />

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Zip Code</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var town in Model)
        {
            <tr>
                <td>
                    @town.Name
                </td>
                <td>
                    @town.ZipCode
                </td>
                <td>
                    @town.CountryName
                </td>
                <td>
                    <a href="/towns/edit/@town.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/towns/delete/@town.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>