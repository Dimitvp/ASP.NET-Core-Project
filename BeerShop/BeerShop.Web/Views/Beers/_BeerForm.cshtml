@model BeerFormModel

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <hr />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" min="0" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StyleId"></label>
        <select asp-for="StyleId" asp-items="Model.Styles" selected="StyleId" class="form-control">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="StyleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BreweryId"></label>
        <select asp-for="BreweryId" asp-items="Model.Breweries" class="form-control">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="BreweryId" class="text-danger"></span>
    </div>
    <a href="/beers/all" class="btn btn-primary">Back</a>
    <button type="submit" class="btn btn-success">Save Beer</button>
</form>
