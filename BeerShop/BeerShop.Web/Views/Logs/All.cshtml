@model IEnumerable<LogListingModel>
@{
    ViewData["Title"] = "All Logs";
}

<h2>@ViewData["Title"]</h2>

<a href="/logs/clear" class="btn btn-warning">Clear Logs</a>
<hr />
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Operation</th>
            <th>Table</th>
            <th>Modified On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>
                    @log.Username
                </td>
                <td>
                    @log.LogType
                </td>
                <td>
                    @log.Table
                </td>
                <td>
                    @log.Date
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/" class="btn btn-sm btn-primary">Back</a>