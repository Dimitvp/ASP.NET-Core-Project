@model StyleFormViewModel
@{
    ViewData["Title"] = $"Delete {Model.Name} style";
}
<section>
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
                <a asp-controller="Styles" asp-action="All" class="btn btn-outline-info">Back</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</section>
