@model StyleFormViewModel
@{
    ViewData["Title"] = $"Delete {Model.Name} style";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <a href="/administration/styles/all" class="btn btn-outline-info">Back</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
