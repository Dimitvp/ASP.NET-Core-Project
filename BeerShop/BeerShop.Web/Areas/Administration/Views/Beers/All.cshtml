@model BeerPageListingViewModel
@{
    ViewData["Title"] = "All Beers";
}
<h2>@ViewData["Title"]</h2>
<div>
    <a href="/administration/beers/create" class="btn btn-lg btn-outline-primary">Add Beer</a>
</div>
<hr />

@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
    var searchTerm = Model.SearchTerm != null ? "&searchTerm=" + Model.SearchTerm : string.Empty;
}


<div>
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" name="searchTerm" placeholder="Search by beer" value="@Model.SearchTerm">
        <button class="btn btn-outline-info" type="submit">Search</button>
    </form>
</div>
<br />
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Brewery</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beer in Model.Beers)
        {
            <tr>
                @*<td>
                    @if (beer.Image != null)
                    {
                        var imgUrl = "data:image;base64," + Convert.ToBase64String(beer.Image);
                        <img src="@imgUrl" width="200" />
                    }
                </td>*@
                <td>@beer.Name</td>
                <td>@beer.Quantity</td>
                <td>@beer.Price</td>
                <td>@beer.Brewery</td>
                <td>
                    <a href="/administration/beers/edit/@beer.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a href="/administration/beers/delete/@beer.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container">
        <ul class="pagination justify-content-center">
            <li class="page-item @previousDisabled">
                <a class="page-link @previousDisabled" href="/administration/beers/all?page=@(Model.PreviousPage)@(searchTerm)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {

                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/administration/beers/all?page=@(i)@(searchTerm)">@i</a></li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link @nextDisabled" href="/administration/beers/all?page=@(Model.NextPage)@(searchTerm)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
</div>