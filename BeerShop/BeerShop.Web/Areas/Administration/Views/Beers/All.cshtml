@model IEnumerable<BeerListingModel>
@{
    ViewData["Title"] = "All Beers";
}
<h2>@ViewData["Title"]</h2>
<div>
    <a href="/administration/beers/create" class="btn btn-lg btn-info">Add Beer</a>
</div>
<hr />
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Picture</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Style</th>
            <th>Brewery</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beer in Model)
        {
            <tr>
                @*<td>
                    @if (beer.Image != null)
                    {
                        var imgUrl = "data:image;base64," + Convert.ToBase64String(beer.Image);
                        <img src="@imgUrl" width="200" />
                    }
                </td>*@
                <td>@beer.Name</td>
                <td>@beer.Quantity</td>
                <td>@beer.Price</td>
                <td>@beer.Style</td>
                <td>@beer.Brewery</td>
                <td>
                    <a href="/administration/beers/edit/@beer.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/administration/beers/delete/@beer.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
