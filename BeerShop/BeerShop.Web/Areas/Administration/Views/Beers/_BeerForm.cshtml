@model BeerFormViewModel

<form method="post" enctype="multipart/form-data">
    <hr />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" min="0" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alcohol"></label>
        <input asp-for="Alcohol" class="form-control" min="0" placeholder="0.00" />
        <span asp-validation-for="Alcohol" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Volume"></label>
        <input asp-for="Volume" class="form-control" min="0" placeholder="0.00" />
        <span asp-validation-for="Volume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServingTemp"></label>
        <input asp-for="ServingTemp" class="form-control" placeholder="3-7 Degrees Celsius" />
        <span asp-validation-for="ServingTemp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <select asp-for="Color" asp-items="@Html.GetEnumSelectList<BeerColor>()" class="form-control">
            <option>Please Select One</option>
        </select>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bitterness"></label>
        <input asp-for="Bitterness" class="form-control" min="0" max="5" placeholder="From 0 to 5" />
        <span asp-validation-for="Bitterness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Density"></label>
        <input asp-for="Density" class="form-control" min="0" max="5" placeholder="From 0 to 5" />
        <span asp-validation-for="Density" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sweetness"></label>
        <input asp-for="Sweetness" class="form-control" min="0" max="5" placeholder="From 0 to 5" />
        <span asp-validation-for="Sweetness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gasification"></label>
        <input asp-for="Gasification" class="form-control" min="0" max="5" placeholder="From 0 to 5" />
        <span asp-validation-for="Gasification" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StyleId"></label>
        <select asp-for="StyleId" asp-items="Model.Styles" selected="StyleId" class="form-control">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="StyleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BreweryId"></label>
        <select asp-for="BreweryId" asp-items="Model.Breweries" class="form-control">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="BreweryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" accept="image/*"/>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <a asp-controller="Beers" asp-action="All" class="btn btn-outline-info">Back</a>
    <button type="submit" class="btn btn-outline-success">Save Beer</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
