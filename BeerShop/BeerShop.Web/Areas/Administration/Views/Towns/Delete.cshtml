@model TownFormModel
@{
    ViewData["Title"] = $"Delete {Model.Name}";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ZipCode"></label>
                <input asp-for="ZipCode" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label asp-for="CountryId"></label>
                <select asp-for="CountryId" asp-items="@Model.Countries" class="form-control" disabled>
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <a href="/administration/styles/all" class="btn btn-primary">Back</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>