@model BreweryFormViewModel

<form method="post">
    <hr />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountryId"></label>
        <select asp-for="CountryId" asp-items="Model.Countries" selected="TownId" class="form-control">
            <option>Please select one</option>
        </select>
    </div>
    <a asp-controller="Breweries" asp-action="All" class="btn btn-outline-info">Back</a>
    <button type="submit" class="btn btn-outline-success">Save Brewery</button>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}