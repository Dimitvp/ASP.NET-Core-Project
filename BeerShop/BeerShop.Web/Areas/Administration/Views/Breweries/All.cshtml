@model BreweryPageListingViewModel

@{
    ViewData["Title"] = "All Breweries";
}
<h2>@ViewData["Title"]</h2>
<div>
    <a href="/administration/breweries/create" class="btn btn-lg btn-outline-primary">Add Brewery</a>
</div>

@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="table-info">
            <th>Name</th>
            <th>Country</th>
            <th>Town</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brewery in Model.Breweries)
        {
            <tr>
                <td>@brewery.Name</td>
                <td>@brewery.Country</td>
                <td>@brewery.TownName</td>
                <td>@brewery.Adress</td>
                <td>
                    <a href="/administration/breweries/edit/@brewery.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a href="/administration/breweries/delete/@brewery.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container">
    <ul class="pagination justify-content-center">
        <li class="page-item @previousDisabled">
            <a class="page-link @previousDisabled" href="/administration/breweries/all?page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
            {

            <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/administration/breweries/all?page=@i">@i</a></li>
        }
        <li class="page-item @nextDisabled">
            <a class="page-link @nextDisabled" href="/administration/breweries/all?page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</div>