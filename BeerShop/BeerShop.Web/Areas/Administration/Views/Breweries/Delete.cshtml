@model BreweryFormModel
@{
    ViewData["Title"] = "Delete brewery";
}

<h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Adress"></label>
                    <input asp-for="Adress" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="TownId"></label>
                    <select asp-for="TownId" asp-items="Model.Towns" selected="TownId" class="form-control" disabled>
                        <option>Please select one</option>
                    </select>
                </div>
                <a href="/administration/breweries/all" class="btn btn-outline-info">Cancel</a>
                <button type="submit" class="btn btn-outline-danger">Confirm Delete</button>
            </form>
        </div>
    </div>