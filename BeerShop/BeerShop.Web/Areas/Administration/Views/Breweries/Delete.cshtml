@model BreweryFormViewModel
@{
    ViewData["Title"] = "Delete brewery";
}
<section>
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" disabled></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="CountryId"></label>
                    <select asp-for="CountryId" asp-items="Model.Countries" selected="TownId" class="form-control" disabled>
                        <option>Please select one</option>
                    </select>
                </div>
                <a asp-controller="Breweries" asp-action="All" class="btn btn-outline-info">Cancel</a>
                <button type="submit" class="btn btn-outline-danger">Confirm Delete</button>
            </form>
        </div>
    </div>
</section>