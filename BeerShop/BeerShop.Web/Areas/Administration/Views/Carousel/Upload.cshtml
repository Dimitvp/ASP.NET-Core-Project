@model CarouselUploadImageFormViewModel
@{
    ViewData["Title"] = "Upload Carousel Image with Resolution 1800x800, up to 2MB in *.jpg format";
}
<section>
    <h2>@ViewData["Title"]</h2>
    <hr />
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="FirstImage"></label>
                <input asp-for="FirstImage" class="form-control" accept="image/*" />
                <span asp-validation-for="FirstImage" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="SecondImage"></label>
                <input asp-for="SecondImage" class="form-control" accept="image/*" />
                <span asp-validation-for="SecondImage" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ThirdImage"></label>
                <input asp-for="ThirdImage" class="form-control" accept="image/*" />
                <span asp-validation-for="ThirdImage" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success">Upload</button>
        </div>
    </form>
</section>
