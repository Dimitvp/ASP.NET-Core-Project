@model AccessoryPageListingViewModel
@{
    ViewData["Title"] = "All Accessories";
}

<h2>@ViewData["Title"]</h2>

<div>
    <a href="/administration/accessories/create" class="btn btn-lg btn-outline-primary">Add Accessory</a>
</div>
<hr />

@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<br />
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var accessory in Model.Accessories)
        {
            <tr>
                @*<td>
                        @if (beer.Image != null)
                        {
                            var imgUrl = "data:image;base64," + Convert.ToBase64String(beer.Image);
                            <img src="@imgUrl" width="200" />
                        }
                    </td>*@
                <td>@accessory.Name</td>
                <td>@accessory.Quantity</td>
                <td>@accessory.Price</td>
                <td>
                    <a href="/administration/accessories/edit/@accessory.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a href="/administration/accessories/delete/@accessory.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container">
    <ul class="pagination justify-content-center">
        <li class="page-item @previousDisabled">
            <a class="page-link @previousDisabled" href="/administration/accessories/all?page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
            {

            <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/administration/accessories/all?page=@i">@i</a></li>
        }
        <li class="page-item @nextDisabled">
            <a class="page-link @nextDisabled" href="/administration/accessories/all?page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</div>

