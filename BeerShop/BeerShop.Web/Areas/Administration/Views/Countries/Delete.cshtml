@model CountryListingServiceModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<form method="post" asp-controller="Countries" asp-action="ConfirmDelete" asp-route-id="@Model.Id"> 
    <hr />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Continent"></label>
        <select asp-for="Continent" asp-items="Html.GetEnumSelectList<Continent>()" class="form-control" disabled>
        </select>
    </div>
    <a asp-controller="Countries" asp-action="All" class="btn btn-outline-info">Cancel</a>
    <button type="submit" class="btn btn-outline-danger">Delete</button>
</form>