@model MessageDetailsServiceModel
@{
    ViewData["Title"] = "Message Details";
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-warning">
                        <div class="card-title">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>Subject : @Model.Subject</h4>
                                </div>
                                <div class="col-md-6">
                                    <h4>Sent On: @Model.SentOn</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-md-12">
                            <h2>Content</h2>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h5>@Model.Content</h5>
                    </div>
                    <div class="card-title text-center">

                    </div>
                    <div class="panel-footer bg-faded">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h4><i class="fa fa-user"></i> Name: @Model.Name</h4>
                            </div>
                            <div class="col-md-4">
                                <h4><i class="fa fa-envelope-open-o"></i> E-Mail: @Model.Email</h4>
                            </div>

                            <div class="col-md-4">
                                <h4><i class="fa fa-phone"></i> Phone: @Model.Phone</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2 align-self-center">
                                    <a asp-controller="Messages" asp-action="All" class="btn btn-outline-primary">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>