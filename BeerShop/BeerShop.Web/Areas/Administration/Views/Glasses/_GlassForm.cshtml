@model GlassFormViewModel

<form method="post" enctype="multipart/form-data">
    <hr />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Volume"></label>
        <input asp-for="Volume" class="form-control" placeholder="In Milliliters"/>
        <span asp-validation-for="Volume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Material"></label>
        <select asp-for="Material" asp-items="@Html.GetEnumSelectList<Material>()" class="form-control" >
            <option>Please Select One</option>
        </select>
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" min="0" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <a href="/administration/glasses/all" class="btn btn-outline-info">Back</a>
    <button type="submit" class="btn btn-outline-success">Save Glass</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}