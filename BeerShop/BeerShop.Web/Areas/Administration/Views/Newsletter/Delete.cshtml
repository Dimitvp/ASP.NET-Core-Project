@model EmailListingServiceModel
@{
    ViewData["Title"] = $"Delete {Model.Email}";
}
<section>
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
                <hr />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" disabled />
                </div>
                <a asp-controller="Newsletter" asp-action="All" class="btn btn-outline-info">Back</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</section>