@model GlassPageListingViewModel
@{
    ViewData["Title"] = "Details";
}
  @{
      var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
      var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<section>

    <div class="container">
        <div class="jumbotron">
            <h2 class="text-uppercase">@ViewData["Title"]</h2>
            <div class="row">
                @foreach (var glass in Model.Glasses)
                {
                    <div class="col-sm-4 col-md-3 col-lg-3 mt-3">
                        <div class="card text-center">
                            <a asp-area="Shopping" asp-controller="Glasses" asp-action="Details" asp-route-id="@glass.Id" asp-route-title="@glass.Name.ToFriendlyUrl()"><img class="card-img-top" src="https://target.scene7.com/is/image/Target/16814407?wid=520&hei=520&fmt=pjpeg"></a>
                            <div class="card-block">
                                <h5 class="text-bold">@glass.Name</h5>
                            </div>
                            <div class="card-text">
                                @glass.Price $
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-outline-warning btn"><i class="fa fa-cart-arrow-down"></i> Add to cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container">
        <ul class="pagination justify-content-center">
            <li class="page-item @previousDisabled">
                <a class="page-link @previousDisabled" asp-controller="Glasses" asp-action="All" asp-route-page="@Model.PreviousPage" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {

                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)">
                    <a class="page-link" asp-controller="Glasses" asp-action="All" asp-route-page="@i">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link @nextDisabled" asp-controller="Glasses" asp-action="All" asp-route-page="@Model.NextPage" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
</section>