@model AccessoryDetailsServiceModel
@{
    ViewData["Title"] = "Details";
}
<h2>Details</h2>
<section>
    <div class="container">
        <div class="card">
            <div class="row">
                <div class="col-md-6">
                    <div class="preview-pic tab-content">
                        <div class="tab-pane active">
                            <img class="card-img-top" src="~/images/Accessories/@Model.Image" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <div class="card-title"><h3>@Model.Name</h3></div>
                        <hr>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center">
                                <div class="card-title">Description</div>
                                <p>@Model.Description</p>
                            </div>
                            <div class="text-center">
                                <div class="card-footer"><h4>Price</h4></div>
                                <p>
                                    @Model.Price $
                                </p>
                                <a data-ajax="true" 
                                   data-ajax-method="GET"
                                   data-ajax-update="#my-shopping-cart"
                                   data-ajax-mode="replace"
                                   asp-area="Shopping" asp-controller="Orders" asp-action="AddToCart" asp-route-id="@Model.Id" asp-route-product="accessory" class="btn btn-outline-warning"><i class="fa fa-cart-arrow-down"></i> Add To Cart</a>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
</section>