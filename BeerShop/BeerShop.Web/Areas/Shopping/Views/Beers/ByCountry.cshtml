@model BeersByCountryPageListingViewModel
@{
    ViewData["Title"] = $"Beers from {Model.Country}";
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}
<section>
    <div class="container">
        <h2 class="text-uppercase">@ViewData["Title"]</h2>
        <div class="row">
            @foreach (var beer in Model.Beers)
            {
                <div class="col-sm-4 col-md-3 col-lg-3 mt-3">
                    <div class="card text-center">
                        <a asp-controller="Beers" asp-action="Details" asp-route-id="@beer.Id" asp-route-title="@beer.Name.ToFriendlyUrl()"><img class="card-img-top" src="~/images/Beers/@beer.Image"></a>
                        <div class="card-block">
                            <a asp-controller="Beers" asp-action="Details" asp-route-id="@beer.Id" asp-route-title="@beer.Name.ToFriendlyUrl()">
                                <h5 class="text-bold">@beer.Name</h5>
                            </a>
                        </div>
                        <div class="card-text">
                            @beer.Price $
                        </div>
                        <div class="card-footer">
                            <a data-ajax="true"
                               data-ajax-method="GET"
                               data-ajax-update="#my-shopping-cart"
                               data-ajax-mode="replace"
                               asp-controller="Orders" asp-action="AddToCart" asp-route-id="@beer.Id" asp-route-product="beer" class="btn btn-outline-warning btn"><i class="fa fa-cart-arrow-down"></i>Add to cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="container">
        <hr />
        <ul class="pagination justify-content-center">
            <li class="page-item @previousDisabled">
                <a class="page-link @previousDisabled" asp-controller="Beers" asp-action="ByCountry" asp-route-id="@Model.CountryId" asp-route-page="@Model.PreviousPage" asp-route-title="@Model.Country" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {

                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)">
                    <a class="page-link" asp-controller="Beers" asp-action="ByCountry" asp-route-id="@Model.CountryId" asp-route-page="@i" asp-route-title="@Model.Country">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link @nextDisabled" asp-controller="Beers" asp-action="ByCountry" asp-route-id="@Model.CountryId" asp-route-page="@Model.NextPage" asp-route-title="@Model.Country" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
</section>